<Window x:Class="CID2.PrintDoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrintDoc" Height="570" Width="441" MinHeight="500" MinWidth="350" Closing="Window_Closing" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <FlowDocumentReader Name="viewer" IsPrintEnabled="True" IsFindEnabled="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="WhiteSmoke" ViewingMode="Scroll" ScrollViewer.CanContentScroll="True"/>
        <Button Name="btnPrint" Content="⎙" ToolTip="Print document" Width="20" Height="20" Margin="5,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="btnPrint_Click"/>
        <Button Name="btnPaper" Content="▯" ToolTip="Set page size" Width="20" Height="20" Margin="30,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="btnPaper_Click"/>
    </Grid>
</Window>
